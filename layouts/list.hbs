<!doctype html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  {{#if pagination.index}}
    <title>Sida {{ pagination.num }} | {{ name }}</title>
  {{else}}
    <title>{{ name }}</title>
  {{/if}}
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" title="madr.se stilmall" href="/madrse.css">
  {{#unless pagination.index}}
    <meta name="robots" value="noindex,follow">
  {{/unless}}
  {{#if pagination.previous}}
    <link rel="previous" href="/{{ pagination.previous.path }}">
  {{/if}}
  {{#if pagination.next}}
    <link rel="next" href="/{{ pagination.next.path }}">
  {{/if}}
  <link href="/prenumerera.xml" type="application/atom+xml" rel="alternate" title="madr.se">
</head>
<body>
  {{> header }}
  <main id="content">
    {{#if pagination.index}}
      <h1>Sida {{ pagination.num }}</h1>
    {{else}}
      <h1 class="super-h1">{{ name }}</h1>
    {{/if}}
    {{#each pagination.files}}
        <article>
          <a href="/{{ path }}">
            <h2>{{ title }}</h2>
          </a>
          <footer>
            <time>{{ date }}</time> av
            <a rel="author" href="/om">
              <img src="https://sv.gravatar.com/avatar/981e98db0f85baaa05dddd1ee46a3276" alt="porträtt">
              Anders Ytterström
            </a>
          </footer>
        </article>
    {{/each}}
  </main>
  <div class="pagination">
    {{#if pagination.previous}}
      <a rel="previous" href="/{{ pagination.previous.path }}">Yngre inlägg</a>
    {{/if}}
    {{#if pagination.next}}
      <a rel="next" href="/{{ pagination.next.path }}">Äldre inlägg</a>
    {{/if}}
  </div>
  {{> footer }}
</body>
</html>